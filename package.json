{
  "name": "wolfpack",
  "version": "0.26.0",
  "description": "Wolfpack - Lake Champlain ice fishing sonar simulator game built with Phaser",
  "main": "electron-main.js",
  "type": "module",
  "scripts": {
    "start": "npm run game",
    "dev": "npm run game",
    "game": "http-server . -p 8080 -c-1",
    "kill-ports": "node scripts/kill-ports.js",
    "git:wtf": "bash scripts/git-wtf.sh",
    "build": "node build.js",
    "build:electron": "node build.js && npm run package:electron",
    "package:electron": "electron-builder --config electron-builder.json",
    "electron": "electron .",
    "preview": "npm run build && http-server dist -p 8081 -c-1",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "verify": "./verify_codebase.sh && npm run lint && npm test"
  },
  "keywords": [
    "phaser",
    "game",
    "fishing",
    "lake-trout",
    "vermont"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.38.0",
    "http-server": "^14.1.1",
    "jest": "^30.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
